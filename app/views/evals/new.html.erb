<h1>評価ページ</h1>

<%= form_for @eval, url: {action: :create} do |f| %>

  <div class="form-group row" id="star">
    <%= f.label :ceval,'評価 ', class:'col-md-3 col-form-label' %>
    <%= f.hidden_field :ceval, id: :review_star %>
  </div>
  
  <script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'eval[ceval]',
    half: true
  });
  </script>  

    <%= f.label :cmt, 'コメント' %>
    <%= f.text_area :cmt, size: "100x15" %>

  <%= f.submit '投稿する' %>

<% end %>