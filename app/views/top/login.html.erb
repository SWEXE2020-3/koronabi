<h1>ログイン</h1>

<%= form_tag '/top/login', method: :post do %>
<p>
    <%= label_tag :uname, 'ユーザーID' %>
    <%= text_field_tag :uname %></p>
<p>
    <%= label_tag :pass, 'パスワード' %>
    <%= password_field_tag :pass %></p>
    <%= submit_tag 'ログイン' %>
<% end %>
<p>
登録されてない方は
<%= link_to '新規登録', new_user_path  %>
</p>